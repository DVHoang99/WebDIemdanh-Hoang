@model IEnumerable<WebApplication1.Models.FORMLUUTRU>

@{
    ViewBag.Title = "TeacherCheckIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TeacherCheckIn</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã giảng viên
        </th>
        <th>
            Tên giảng viên
        </th>
        <th>
            ID thời khóa biểu
        </th>
        <th>
            Mã môn học
        </th>
        <th>
            Tên môn học
        </th>
        <th>
            Mã xác nhận
        </th>
        <th>
            Trạng thái
        </th>
    </tr>

@foreach (var item in Model) {
<form action="/checkIn/EditTeacherCheckIn" method="post">
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MAGIANGVIEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GIANGVIEN.TEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IDTKB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TKB.MAMH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TKB.MONHOC.TENMONHOC)
        </td>
        <td>
            <input type="number" name="maxacnhan" value="@item.MAXACNHAN" />
        </td>
        <td>
            <select id="cars" name="trangthai">
                <option value="1">Hoạt động</option>
                <option value="0">Không hoạt động</option>
            </select>
        </td>
        <td style="display:none">
            <input type="text" name="id" value="@item.ID" />
        </td>
        <td>
            <button type="submit" class="btn btn-primary">Submit</button>
        </td>
    </tr>
</form>
}

</table>
