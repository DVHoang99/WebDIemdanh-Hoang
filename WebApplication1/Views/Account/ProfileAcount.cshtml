

@{
    ViewBag.Title = "ProfileAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin tài khoản</h2>

<div class="container">
    <form method="POST" action="~/Account/ProfileAcount">
        <div class="form-group">
            <label>Tên đăng nhập</label>
            <input type="text" class="form-control" value="@ViewBag.id" disabled>
            <input style="display:none" type="text" class="form-control" name="id" value="@ViewBag.id">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Mật khẩu</label>
            <input type="password" class="form-control" name="pw" value="@ViewBag.pw" disabled>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Tên</label>
            <input type="text" class="form-control" name="ten" value="@ViewBag.ten">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Chức vụ</label>
            <input type="text" class="form-control" name="chacvu" value="@ViewBag.chucvu">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Email</label>
            <input type="email" class="form-control" name="email" value="@ViewBag.email">
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>

    <div id="thanhcong" class="alert alert-success" style="display:none" role="alert">
        Sử thông tin thành công!!!
    </div>
    <div id="thatbai" class="alert alert-danger" style="display:none" role="alert">
        Sửa thông tin thất bại!!!
    </div>

</div>

<script>
    if (@ViewBag.thanhcong == 1) {
        document.getElementById("thanhcong").style.display = "block";
    } else {
        document.getElementById("thatbai").style.display = "block";
    }

</script>