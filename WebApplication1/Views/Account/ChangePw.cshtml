
@{
    ViewBag.Title = "ChangePw";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đổi mật khẩu</h2>
<div class="container">
    <form method="POST" action="~/Account/ChangePw">
        <div class="form-group" style="display:none">
            <label>id </label>
            <input type="password" class="form-control" name="id" value="@ViewBag.id" >
        </div>
        <div class="form-group">
            <label>Mật khẩu mới </label>
            <input type="password" class="form-control" name="pw">
        </div>
        <div class="form-group">
            <label>Nhập lại</label>
            <input type="text" class="form-control" name="repw">
        </div>
        <div class="alert alert-success" role="alert" id="@ViewBag.thanhcong" style="display: none;">
            Đổi mật khẩu thành công
        </div>
        <div class="alert alert-danger" role="alert" id="@ViewBag.thatbai" style="display: none;">
            Đổi mật khẩu không thành công
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>
<script>
    document.getElementById("thanhcong").style.display = "block";
    document.getElementById("thatbai").style.display = "block";
    </script>

